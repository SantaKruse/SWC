<div class="wine-background-cover"></div>
<div class="cover">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'flex-form'}) do |f| %>
    <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'email' %>
      <%= f.password_field :password, autocomplete: "off", placeholder:'password' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:'confirm password' %>
      <%= f.submit "Sign up" %>
      <div class="login">
        <%= link_to('Login', new_user_session_path)  %> 
      </div> 
  <% end %>
</div>




