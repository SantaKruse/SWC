
<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'wine-form-object'} do |f| %>
  <% if current_user.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@wine.errors.count, "error") %> prevented this wine from saving</h2>
      <ul>
        <% @wine.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>  
        <% end %>
      </ul>
    </div>
  <% end %> 
  <%= f.text_field :first_name, placeholder:'first name' %> 
  <%= f.text_field :last_name, placeholder:'last name' %> 
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <%= f.text_field :password, placeholder:"password (leave blank if you don't want to change it)" %> 
  <% if @minimum_password_length %>
    <br />
    <em><%= @minimum_password_length %> characters minimum</em>
  <% end %>
  <%= f.text_field :password_confirmation, placeholder:'password confirmation' %> 
  <%= f.text_field :current_password, placeholder:'current password (we need your current password to confirm your changes)' %> 

<% end %> 	